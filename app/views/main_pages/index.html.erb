<p id="notice"><%= notice %></p>

<h1>Listing Main Pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @main_pages.each do |main_page| %>
      <tr>
        <td><%= main_page.title %></td>
        <td><%= link_to 'Show', main_page %></td>
        <td><%= link_to 'Edit', edit_main_page_path(main_page) %></td>
        <td><%= link_to 'Destroy', main_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

